      cursor: pointer;
      font-size: 1.08em;
      user-select: none;
    }
    input[type="checkbox"] {
      accent-color: #6366f1;
      margin-right: 10px;
      width: 18px;
      height: 18px;
    }
    .btn-row {
      display: flex;
      gap: 14px;
      margin-top: 26px;
    }
    button {
      padding: 10px 28px;
      font-size: 1em;
      background: #6366f1;
      color: #fff;
      border: none;
      border-radius: 7px;
      box-shadow: 0 2px 8px #6366f122;
      cursor: pointer;
      transition: background 0.2s;
    }
    button:hover {
      background: #4f46e5;
    }
    button[type="reset"] {
      background: #f1f5f9;
      color: #222e50;
      border: 1px solid #6366f1;
    }
    button[type="reset"]:hover {
      background: #e0e7ff;
    }
