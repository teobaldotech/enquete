<body>
  <div class="card">
    <h2>Qual rede social você usa?</h2>
    <form id="formEnquete" autocomplete="off">
      <label><input type="checkbox" name="rede" value="LinkedIn"> LinkedIn</label>
      <label><input type="checkbox" name="rede" value="Instagram"> Instagram</label>
      <label><input type="checkbox" name="rede" value="Twitter"> Twitter</label>
      <label><input type="checkbox" name="rede" value="Facebook"> Facebook</label>
      <label><input type="checkbox" name="rede" value="WhatsApp"> WhatsApp</label>
      <div class="btn-row">
        <button type="submit">Votar</button>
        <button type="reset">Reset</button>
      </div>
    </form>
    <div class="results" id="resultados"></div>
    <div class="voted-msg" id="msgVotou" style="display:none;">Obrigado por votar!</div>
  </div>
  <script>
    // Votos iniciais simulados
    const votos = {
      "LinkedIn": 6,
      "Instagram": 9,
      "Twitter": 5,
      "Facebook": 4,
      "WhatsApp": 6
    };

    // Para mostrar resultado parcial antes do voto
    let votosSimulados = {...votos};

    const form = document.getElementById("formEnquete");
    const resultDiv = document.getElementById("resultados");
    const msgVotou = document.getElementById("msgVotou");
    const checkboxes = Array.from(document.querySelectorAll('input[name="rede"]'));

    // Mostra resultados (antes de votar e após)
    function mostrarResultados(votosParaMostrar) {
      const totalVotos = Object.values(votosParaMostrar).reduce((a, b) => a + b, 0);
      let html = "<h3 style='margin-bottom:8px;'>Resultado da Enquete:</h3>";
      for (const [rede, qtd] of Object.entries(votosParaMostrar)) {
        const porcentagem = totalVotos ? Math.round((qtd / totalVotos) * 100) : 0;
        html += `
          <div class="bar-label">
            <span>${rede}</span>
            <span>${qtd} voto(s) • ${porcentagem}%</span>
          </div>
          <div class="bar-container">
            <div class="bar" style="width: ${porcentagem}%;"></div>
          </div>
        `;
      }
      resultDiv.innerHTML = html;
    }

    // Atualiza resultados simulando a seleção do usuário ANTES de votar
    function mostrarResultadosParciais() {
      // Clona votos
      votosSimulados = {...votos};
      checkboxes.forEach(input => {
        if (input.checked) votosSimulados[input.value]++;
      });
      mostrarResultados(votosSimulados);
    }

    // Inicialização: mostra resultados parciais
    mostrarResultadosParciais();

    // Ao marcar/desmarcar, atualiza resultados
    checkboxes.forEach(input => {
      input.addEventListener('change', mostrarResultadosParciais);
    });

    // Ao votar, soma aos votos reais e mostra mensagem + trava formulário
    form.addEventListener("submit", function(e) {
      e.preventDefault();
      const selecionados = checkboxes.filter(input => input.checked);

      if (selecionados.length === 0) {
        alert("Selecione ao menos uma opção.");
        return;
      }

      selecionados.forEach(input => {
        votos[input.value]++;
      });

      mostrarResultados(votos);
      msgVotou.style.display = "block";
      // Desabilita todos os inputs e botões
      checkboxes.forEach(input => input.disabled = true);
      form.querySelector('button[type="submit"]').disabled = true;
      form.querySelector('button[type="reset"]').disabled = true;
    });

    // Ao resetar, limpa seleção e volta aos resultados reais
    form.addEventListener("reset", function(e) {
      setTimeout(() => {
        msgVotou.style.display = "none";
        checkboxes.forEach(input => input.disabled = false);
        form.querySelector('button[type="submit"]').disabled = false;
        form.querySelector('button[type="reset"]').disabled = false;
        mostrarResultados(votos); // volta ao real
        mostrarResultadosParciais(); // e já mostra parcial (sem votos do user)
      }, 10);
    });

  </script>
</body>
</html>



