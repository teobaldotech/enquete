<body>
  <div class="card">
    <h2>Qual estilo musical você mais escuta?</h2>
    <form id="formEnquete" autocomplete="off">
      <label><input type="checkbox" name="estilo" value="Sertanejo"> Sertanejo</label>
      <label><input type="checkbox" name="estilo" value="Rock"> Rock</label>
      <label><input type="checkbox" name="estilo" value="Pop"> Pop</label>
      <label><input type="checkbox" name="estilo" value="Funk"> Funk</label>
      <label><input type="checkbox" name="estilo" value="MPB"> MPB</label>
      <div class="btn-row">
        <button type="submit">Votar</button>
        <button type="reset">Reset</button>
      </div>
      <div class="error-msg" id="erroMsg"></div>
    </form>
    <div class="results" id="resultados"></div>
    <div class="voted-msg" id="msgVotou">Obrigado por votar!</div>
  </div>

  <script>
    const votos = {
      "Sertanejo": 7,
      "Rock": 5,
      "Pop": 8,
      "Funk": 4,
      "MPB": 6
    };

    const form = document.getElementById("formEnquete");
    const resultDiv = document.getElementById("resultados");
    const msgVotou = document.getElementById("msgVotou");
    const erroMsg = document.getElementById("erroMsg");
    const checkboxes = Array.from(document.querySelectorAll('input[name="estilo"]'));

    function mostrarResultados(votosParaMostrar) {
      const total = Object.values(votosParaMostrar).reduce((a, b) => a + b, 0);
      let html = "<h3 style='margin-bottom:8px;'>Resultado da Enquete:</h3>";
      for (const [estilo, qtd] of Object.entries(votosParaMostrar)) {
        const porcentagem = total ? Math.round((qtd / total) * 100) : 0;
        html += `
          <div class="bar-label">
            <span>${estilo}</span>
            <span>${qtd} voto(s) • ${porcentagem}%</span>
          </div>
          <div class="bar-container">
            <div class="bar" style="width: ${porcentagem}%;"></div>
          </div>
        `;
      }
      resultDiv.innerHTML = html;
    }

    function mostrarResultadosParciais() {
      const votosSimulados = {...votos};
      checkboxes.forEach(input => {
        if (input.checked) votosSimulados[input.value]++;
      });
      mostrarResultados(votosSimulados);
    }

    mostrarResultadosParciais();
    checkboxes.forEach(input => {
      input.addEventListener('change', mostrarResultadosParciais);
    });

    form.addEventListener("submit", function(e) {
      e.preventDefault();
      erroMsg.style.display = "none";
      msgVotou.style.display = "none";

      const selecionados = checkboxes.filter(input => input.checked);
      if (selecionados.length === 0) {
        erroMsg.textContent = "⚠️ Selecione ao menos um estilo musical.";
        erroMsg.style.display = "block";
        return;
      }

      selecionados.forEach(input => {
        votos[input.value]++;
      });

      mostrarResultados(votos);
      msgVotou.style.display = "block";

      // Reinicia automaticamente após 3 segundos
      setTimeout(() => {
        form.reset();
        msgVotou.style.display = "none";
        erroMsg.style.display = "none";
        mostrarResultadosParciais();
      }, 3000);
    });

    form.addEventListener("reset", function(e) {
      setTimeout(() => {
        checkboxes.forEach(input => input.checked = false);
        mostrarResultados(votos);
        mostrarResultadosParciais();
        erroMsg.style.display = "none";
        msgVotou.style.display = "none";
      }, 10);
    });
  </script>
</body>
</html>